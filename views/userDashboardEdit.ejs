<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">    
</head>

<body class="d-flex flex-column min-vh-100">
  <script>
    window.onload = function(){
      document.getElementById('password-change-1').hidden = true;
      document.getElementById('password-change-2').hidden = true;
      document.getElementById('password-change-3').hidden = true;
      document.getElementById('password-change-5').hidden = true;
    }
  </script>
  <div class="card-header text-center"> 
  <!-- header Navigation-->
  <!-- <div class="card text-center "> -->
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                  <a class="navbar-brand text-dark" href="#" >SWP-Project</a>
                  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav  me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                      <li class="nav-item ">
                        <a class="nav-link text-dark"  href="#">Menu</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Account</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Cart</a>
                      </li>
                    </ul>
                    <form class="d-flex" role="search">
                      <input class="form-control me-2" type="search" placeholder="Search Bar" aria-label="Search">
                      <button class="btn btn-outline-success " type="submit">Search</button>
                    </form>
                  </div>
                </div>
              </nav>
        </div>

        <!-- Body -->
        <div class="card-body mt-5">
          <h5 class="card-title mb-5 d-flex justify-content-center">Edit My Dashboard</h5>
          
          <section>
            <form action="/userDashboardEdit" method="post">
              <div class="row">
                <div class="col-lg-4">
                  <div class="card mb-4">
                    <div class="card-body text-center">
                      <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                        class="rounded-circle img-fluid" style="width: 150px;">
                      <h5 class="my-3">Monster</h5>
                      <p class="text-muted mb-1">User</p>
                      <div class="d-flex justify-content-center mb-2">
                        <button type="submit" class="btn btn-dark">Confirm Change</button>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-8">
                  <div class="card mb-4">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm-3">
                          <p class="mb-0">Full Name</p>
                        </div>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" id="name" name="name" value="<%= name %>" required>
                          <!-- <p class="text-muted mb-0">Monster</p> -->
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <p class="mb-0">Email</p>
                        </div>
                        <div class="col-sm-9">
                          <input type="email" class="form-control" id="email" name="email" value="<%= email %>" required>
                          <!-- <p class="text-muted mb-0">swp@example.com</p> -->
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <p class="mb-0">Mobile</p>
                        </div>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" id="phone" name="phone" value="<%= phone %>" required>
                          <!-- <p class="text-muted mb-0">(000) 000-0000</p> -->
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <p class="mb-0">Address</p>
                        </div>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" id="address" name="address" value="<%= address %>" required>
                          <!-- <p class="text-muted mb-0">IFSC NCI</p> -->
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <p class="mb-0" id="password-change-4">Current Password</p>
                        </div>
                        <div class="col-sm-3">
                            <input type="password" class="form-control" id="password" name="password">
                          </div>
                      </div>
                      <hr>
                      <input type="checkbox" name="checkedbox" onchange="
                      if(document.getElementById('repassword').type == 'hidden'){
                        document.getElementById('repassword').type = 'password';
                        document.getElementById('repassword2').type = 'password';
                        document.getElementById('password').type = 'password';
                        document.getElementById('password-change-1').hidden = false;
                        document.getElementById('password-change-2').hidden = false;
                        document.getElementById('password-change-3').hidden = false;
                        document.getElementById('password-change-5').hidden = false;
                      } else {
                        document.getElementById('repassword').type = 'hidden'
                        document.getElementById('repassword').value = '';
                        document.getElementById('repassword2').type = 'hidden'
                        document.getElementById('repassword2').value = '';
                        document.getElementById('password').type = 'hidden';
                        document.getElementById('password').value = '';
                        document.getElementById('password-change-1').hidden = true;
                        document.getElementById('password-change-2').hidden = true;
                        document.getElementById('password-change-3').hidden = true;
                        document.getElementById('password-change-5').hidden = true;
                      }" >
                      
                      <label for="passwordcheckbox">Change Password</label>
                      <hr id="password-change-5">

                      <div class="row">
                        <div class="col-sm-3">
                          <p class="mb-0" id="password-change-1">New Password</p>
                        </div>
                        <div class="col-sm-3">
                            <input type="hidden" class="form-control" id="repassword" name="repassword">
                          </div>
                      </div>

                      <hr id="password-change-2">
                      <div class="row">
                        <div class="col-sm-3">
                          <p class="mb-0" id="password-change-3">Confirm Password</p>
                        </div>
                        <div class="col-sm-3">
                            <input type="hidden" class="form-control" id="repassword2" name="repassword2">
                          </div>
                      </div>
                      
                    </div>
                  </div>
                
                    </div>
                  </div>
                </div>
              </div>
            </form>
            <footer class="card-footer text-muted py-5 bg-light mt-auto">
                footer :)
              </footer>
          </section>
         
      </div>
    </body>
    </html>