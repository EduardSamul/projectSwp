    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">    
</head>

<body class="d-flex flex-column min-vh-100">
  <div class="card-header text-center">
        <!-- header Navigation-->
        
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                  <a class="navbar-brand text-dark" href="/" >Dublin Gaming Center</a>
                  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav  me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                      <li class="nav-item ">
                        <a class="nav-link text-dark"  href="#">Menu</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link text-dark" href="/login1">Account</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Cart</a>
                      </li>
                    </ul>
                    <form class="d-flex" role="search">
                      <input class="form-control me-2" type="search" placeholder="Search Bar" aria-label="Search">
                      <button class="btn btn-outline-success " type="submit">Search</button>
                    </form>
                  </div>
                </div>
              </nav>
        </div>

        
       <!-- Body -->
        <div class="card-body mt-5">
            <h5 class="card-title mb-5 d-flex justify-content-center">Upload Item</h5>
            
            <!--Join Form-->
            <form action="/productUpload" method="post" enctype="multipart/form-data">
              <div class="row mb-3 d-flex justify-content-center">
                <!--Product name-->
                <label for="name" class="col-sm-2 col-form-label">Product Name</label>
                <div class="col-sm-3">
                  <input type="text" class="form-control" id="productName" name="name" required>
                </div>
              </div>
              <div class="row mb-3 d-flex justify-content-center">
                <!--Product Price-->
                <label for="price" class="col-sm-2 col-form-label">Price(in euro-cents)</label>
                <div class="col-sm-3">
                  <input type="text" class="form-control" id="price" name="price" required>
                </div>
              </div>
              <div class="row mb-3 d-flex justify-content-center">
                <!--Product Description-->
               <label for="description" class="col-sm-2 col-form-label">description</label>
                    <div class="col-sm-3">
                    <textarea class="form-control" id="description" name="desc" rows="3"></textarea>
                  </div>
              </div>

              <!--Product Image-->
              <div class="row mb-3 d-flex justify-content-center">
                    <label for="formFile" class="col-sm-2 col-form-label">Upload Image</label>
                    <div class="col-sm-3">
                    <input class="form-control" type="file" id="uploadImage" name="picture">
                  </div>
              </div>
              
  
              <!--Upload button-->
              <div class="col-12">
            
  
                <div class="mt-5 d-flex justify-content-center me-auto gap-2">
                <button type="submit" class="btn btn-success btn-sm margin-left-2">Upload</button>
                <a href="/adminDashboard"><button type="button" class="btn btn-secondary btn-sm">Cancel</button></a>
                
              </div>
             </form>
            </div>
            </div>
        </div>
      </body>

                
    <footer class="card-footer text-muted py-5 bg-light mt-auto">
        footer :)
      </footer>

      
