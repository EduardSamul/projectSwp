<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">    
</head>

<body class="d-flex flex-column min-vh-100">
  <div class="card-header text-center"> 
  <!-- header Navigation-->
  <!-- <div class="card text-center "> -->
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                  <a class="navbar-brand text-dark" href="#" >Dublin Gaming Center</a>
                  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav  me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                      <li class="nav-item ">
                        <a class="nav-link text-dark"  href="#">Menu</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Account</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Cart</a>
                      </li>
                    </ul>
                    <form class="d-flex" role="search">
                      <input class="form-control me-2" type="search" placeholder="Search Bar" aria-label="Search">
                      <button class="btn btn-outline-success " type="submit">Search</button>
                    </form>
                  </div>
                </div>
              </nav>
        </div>

        <!-- Body -->
        <div class="card-body mt-5">
          <h5 class="card-title mb-5 d-flex justify-content-center">Create Review for <%=product%></h5>
          <% for(var i = 0; i < length; i++) {%>
            <h2><%=alert[i]%></h2>
          <% } %>
          <form action="/writeReview/<%=product%>" method="post">
            <div class="row mb-3 d-flex justify-content-center">
              <!--Product Description-->
             <label for="description" class="col-sm-2 col-form-label">Add a written review</label>
                  <div class="col-sm-3">
                  <textarea class="form-control" id="description" name="userReview" rows="3"></textarea>
                </div>
            </div>
          


            <div class="col-12">
            
  
                <div class="mt-5 d-flex justify-content-center me-auto gap-2">
                <button type="submit" class="btn btn-success btn-sm margin-left-2">Submit</button>
                
              </div>
            </form>
    
                    </div>
                  </div>
                </div>
              </div>
            
            <footer class="card-footer text-muted py-5 bg-light mt-auto">
                footer :)
              </footer>
      
         
      </div>
    </body>
    </html>